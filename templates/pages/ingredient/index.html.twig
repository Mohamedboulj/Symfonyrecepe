{% extends 'base.html.twig' %}

{% block title %}Symrecepe - Mes ingredients {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-3">Mes ingredients</h1>
        {% if not ingredients.items is same as ([]) %}
            <div class="count">
                <h4>
                    {{ ingredients.getTotalItemCount }} results were found .
                </h4>
            </div>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">NÂ°</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Date of creation</th>
                </tr>
                </thead>
                <tbody>
                {% for key,ingredient in ingredients %}
                    <tr>
                        <td>{{ key+1 }}</td>
                        <td>{{ ingredient.name }}</td>
                        <td>{{ ingredient.price }}</td>
                        <td>{{ ingredient.createdAt|date('d/m/y H:i') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation d-flex justify-content-center">
                {{ knp_pagination_render(ingredients) }}
            </div>
        {% else %}
            <div class="count">
                <h4>
                    No results were found .
                </h4>
            </div>
        {% endif %}
    </div>
{% endblock %}
