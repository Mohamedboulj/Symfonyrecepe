{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
    <h2>Update recipe : </h2>
    <div class="container mt-2">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            <div class="form-error">
                {{ form_errors(form.name) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.price) }}
            {{ form_widget(form.price) }}
            <div class="form-error">
                {{ form_errors(form.price) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.duration) }}
            {{ form_widget(form.duration) }}
            <div class="form-error">
                {{ form_errors(form.duration) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.nbPerson) }}
            {{ form_widget(form.nbPerson) }}
            <div class="form-error">
                {{ form_errors(form.nbPerson) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.difficulty) }}
            {{ form_widget(form.difficulty) }}
            <div class="form-error">
                {{ form_errors(form.difficulty) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            <div class="form-error">
                {{ form_errors(form.description) }}
            </div>
        </div>

        <div class="form-group mt-4">
            {{ form_widget(form.isFavorite) }}
            {{ form_label(form.isFavorite) }}
            <div class="form-error">
                {{ form_errors(form.isFavorite) }}
            </div>
        </div>
        <div class="form-group mt-4">
            {{ form_label(form.ingredient) }}
            {{ form_widget(form.ingredient) }}
            <div class="form-error">
                {{ form_errors(form.ingredient) }}
            </div>
            <div class="form-group">
                <div>
                    {{ form_row(form.submit, { 'label': 'Edit recipe' }) }}
                </div>
                <div>
                    <button class="btn btn-warning">
                        <a href="{{ path('recipe.index') }}">Go back</a>
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}